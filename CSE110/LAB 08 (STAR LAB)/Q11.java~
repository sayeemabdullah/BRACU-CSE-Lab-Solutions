import java.util.*;
public class Q11{
public static void main (String args[]){
  Scanner input = new Scanner(System.in);
  int row = input.nextInt();
  for(int i=1;i<=row;i++){
    for(int j=1;j<=row-i;j++){
      System.out.print(" ");
  }
  for(int j=0;j<i;j++){
      System.out.print(row-j);
  } 
    System.out.println();
  }
}
}