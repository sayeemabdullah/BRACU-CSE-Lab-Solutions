import java.util.*;
public class Q9{
public static void main (String args[]){
  Scanner input = new Scanner(System.in);
  int row = input.nextInt();
  int value = (row*2)-1;
  for(int i=1;i<=value;i++){
    for(int j=1;j<=row-i;j++){
      System.out.print(" ");
  }
  for(int j=1;j<=i;j++){
      System.out.print("*");
  } 
    System.out.println();
  }
}
}